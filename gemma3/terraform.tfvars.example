# ---------------------------------------------------------------------------------------------------------------------
# REQUIRED - Google Cloud Project ID
# ---------------------------------------------------------------------------------------------------------------------
project_id = "your-gcp-project-id"

# ---------------------------------------------------------------------------------------------------------------------
# Regional Configuration
# ---------------------------------------------------------------------------------------------------------------------
region = "us-central1"
zone   = "us-central1-a"

# ---------------------------------------------------------------------------------------------------------------------
# Cluster Configuration
# ---------------------------------------------------------------------------------------------------------------------
cluster_name    = "gemma3-cluster"
release_channel = "RAPID"  # Using RAPID channel for early access to new features

# ---------------------------------------------------------------------------------------------------------------------
# Network Configuration
# ---------------------------------------------------------------------------------------------------------------------
subnet_cidr     = "10.0.0.0/24"
pod_cidr        = "10.1.0.0/16"
service_cidr    = "10.2.0.0/16"
private_cluster = false
# master_ipv4_cidr = "172.16.0.0/28" # Uncomment if private_cluster = true

# ---------------------------------------------------------------------------------------------------------------------
# Node Pool Configuration
# ---------------------------------------------------------------------------------------------------------------------
# ARM-based machine for cost efficiency
machine_type = "t2a.medium"
use_spot_vms = true
disk_size_gb = 100
disk_type    = "pd-standard"

# ---------------------------------------------------------------------------------------------------------------------
# Autoscaling Configuration
# ---------------------------------------------------------------------------------------------------------------------
min_node_count     = 1
max_node_count     = 3
initial_node_count = 1

# ---------------------------------------------------------------------------------------------------------------------
# Advanced Configuration
# ---------------------------------------------------------------------------------------------------------------------
local_ssd_count = 0
enable_gvisor   = false  # Security sandbox for containers

# ---------------------------------------------------------------------------------------------------------------------
# Gemma 3 Configuration
# ---------------------------------------------------------------------------------------------------------------------
k8s_namespace        = "gemma3"
gemma3_replicas      = 1
gemma3_image         = "ghcr.io/google-deepmind/gemma:latest"
gemma3_cpu_limit     = "4"
gemma3_memory_limit  = "16Gi"
gemma3_cpu_request   = "2"
gemma3_memory_request = "8Gi"
